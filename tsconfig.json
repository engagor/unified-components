{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "sourceMap": true,
        "typeRoots": ["node_modules/@types"],
        "declaration": true,
        "outDir": "./dist/"
    },
    "include": [
        "src"
    ],
    "exclude": [
      "stories"
    ]
}
